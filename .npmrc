# Set custom npm registry (default is npmjs.org)
registry=https://registry.npmjs.org/

# Always use the latest version of a package if no version is specified
save-exact=true

# Use a specific scope with a private registry (Optional)
# @your-scope:registry=https://your-private-registry.com/

# Increase timeout for slow connections (Optional)
fetch-timeout=60000

# Set cache directory (Optional)
cache=~/.npm

# Enable strict SSL verification (true/false)
strict-ssl=true

# Configure authentication token for private registries (Optional)
# //your-private-registry.com/:_authToken=YOUR_AUTH_TOKEN

# Ignore scripts (if you don't want to run post-install scripts)
ignore-scripts=false
